{% block title %}Catégorie{{ category.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-5">Voir</h1>

		<a class="btn btn-sm btn-dark my-4" href="{{ path('category_index') }}">Retour à la liste</a>

		<table class="table table-hover">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ category.name }}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
