{% extends 'base.html.twig' %}

{% block title %}Program
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center my-3">Détails de la série</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ program.id }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ program.title }}</td>
				</tr>
				<tr>
					<th>Synopsis</th>
					<td>{{ program.summary }}</td>
				</tr>
				<tr>
					<th>Poster</th>
					<td>{{ program.poster }}</td>
				</tr>
			</tbody>
		</table>

		<div class="row d-flex justify-content-around mt-5">
			<a href="{{ path('program_index') }}" type="button" class="btn btn-outline-dark">Retour aux Séries</a>

			<a type="button" class="btn btn-outline-warning" href="{{ path }}">Changer de Série</a>
		</div>

	</div>

{% endblock %}
